<h2>Contact</h2>

<form>
    <div class="form-group">
        <label for="emailAddress">Email address</label>
        {{input value=emailAddress type="email" id="emailAddress" class="form-control" placeholder="Please type your e-mail address."}}
    </div>
    <div class="form-group">
        <label for="message">Message</label>
        {{textarea value=message id="message" class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7"}}
    </div>
    <button disabled={{isDisabled}} type="submit" class="btn btn-primary" {{action 'sendMessage'}}>Send message</button>
</form>

{{#if responseMessage}}
    <br>
    <div class="alert alert-success">{{responseMessage}}</div>
{{/if}}